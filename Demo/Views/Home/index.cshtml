                        .style("font-size", "18px")
                        .text("Income Quintile");

                    svg.append("g")
                        .attr("class", "y axis")
                        .style("font-size", "14px")
                        .call(yAxis)
                      .append("text")
                        .attr("class", "label")
                        .attr("fill", "#000000")
                        .attr("transform", "rotate(-90)")
                        .attr("x",-height/2)
                        .attr("y", -54)
                        .attr("dy", ".71em")
                        .style("text-anchor", "middle")
