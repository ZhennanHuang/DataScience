            //z = d3.scaleOrdinal(["#0000FF","#0040FF","#0080FF","#00BFFF","#00FFFF"]);
            z = d3.scaleOrdinal(["#282043","5F4DA1","#8A6FEA","#ADA0DC","#CFC7DE"])

        var stack = d3.stack();

        var area = d3.area()
            .curve(d3.curveMonotoneX)
            .x(function(d, i) { return x(d.data.Year); })
            .y0(function(d) { return y(d[0]); })
            .y1(function(d) { return y(d[1]); });

        var g = svg.append("g")
            .attr("transform", "translate(" + margin.left + "," + margin.top + ")");

        d3.csv("../../csv/boundary6.csv", function(error, data) {
            if (error) throw error;

            var keys = data.columns.slice(1);
            data.forEach(function(d) {
                d.Year=parseDate(d.Year);
            });

            x.domain(d3.extent(data, function(d) { return d.Year; }));
            y.domain([0,1200]);
            z.domain(keys);
            stack.keys(keys);
            console.log(stack(data));
  
            var fade = function(opacity) {
                return function(g, i) {
                    svg.selectAll(".area")
                        .filter(function(d,j) {
                            return j!=i ;
				
                        })
                      .transition()
                      .style("opacity", opacity)
                    ;
                };
            };
            var tip = d3.tip()
                .attr("class", "d3-tip")
                .offset([30, 0])
                .html(function(d,i ) {
                    return "Quintile: "+(i+1);
                });
            svg.call(tip);
  
  
            var layer = g.selectAll(".layer")
              .data(stack(data))
              .enter().append("g")
                .attr("class", "layer")
            ;

            layer.append("path")
                .attr("class", "area")
                .style("fill", function(d) { return z(d.key); })
                .attr("d", area)
                .style("opacity", 0.8)
                .on("mouseover",fade(0.3))
                .on("mousedown",tip.show)
                .on("mouseup",tip.hide)
                .on("mouseout",fade(1));
  

            var legend = svg.selectAll(".legend")
                .data(stack(data))
                .enter().append("g")
                .attr("class", "legend")
                .attr("transform", function(d, i) { return "translate(0," + (i+1) * 20 + ")"; });
	  
            legend.append("rect")
                .attr("class", "rect")
                .attr("x", width+margin.right-40)
                .attr("width", 18)
                .attr("height", 18)
                .style("fill", function(d) { return z(d.key); });

            legend.append("text")
                .attr("class", "text")
                .attr("x", width+margin.right-50)
                .attr("y", 9)
                .attr("dy", ".35em")
                .style("text-anchor", "end")
                .text(function(d) { return d.key; });

            g.append("g")
                .attr("class", "axis axis--x")
                .attr("transform", "translate(0," + height + ")")
                .style("font-size", 14)
                .call(d3.axisBottom(x))
                .append("text")
                  .attr("fill", "#000")
                  .attr("x", width / 2)
                  .attr("y", 46)
                  .style("text-anchor", "middle")
                  .style("font-size",18)
                  .text("Year");

            g.append("g")
                .attr("class", "axis axis--y")
                .style("font-size", 14)
                .call(d3.axisLeft(y))
                .append("text")
                .attr("fill", "#000")
                .attr("transform", "rotate(-90)")
                .attr("x", -height / 2)
                .attr("y", -54)
                .style("text-anchor", "middle")
                .style("font-size", 18)
                .text("Weekly Income (Pence per Person)");
        });


        
    </script>
